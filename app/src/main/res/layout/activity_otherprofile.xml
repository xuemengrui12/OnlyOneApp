<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_normal" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/otherprofile_header"
        android:layout_alignParentTop="true"
        layout="@layout/include_header" />

    <com.oo.onlyone.view.PagerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/otherprofile_bottom"
        android:layout_below="@+id/otherprofile_header"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/include_otherprofile_photos" />

            <include layout="@layout/include_otherprofile_feed" />

            <include layout="@layout/include_otherprofile_accountinfo" />

            <include layout="@layout/include_otherprofile_bindinfo" />

            <include layout="@layout/include_otherprofile_selfintroduction" />

            <include layout="@layout/include_otherprofile_joingroup" />
        </LinearLayout>
    </com.oo.onlyone.view.PagerScrollView>

    <include
        android:id="@+id/otherprofile_bottom"
        layout="@layout/include_otherprofile_bottom" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherprofile_header"
        android:background="@mipmap/bg_topbar_shadow"
        android:focusable="false" />

</RelativeLayout>